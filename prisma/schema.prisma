generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Users {
    // id        Int     @id @default(autoincrement())
    id        String  @id @default(uuid())
    firstName String?
    lastName  String?
    mobile    String  @unique
}

model Products {
    id          String   @id @default(uuid())
    name        String   @unique
    url         String   @unique
    price       Int
    image       String
    gallery     String[]
    description String?
}
